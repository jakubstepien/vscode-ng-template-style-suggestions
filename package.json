{
  "name": "vscode-angular-sass-suggestions",
  "displayName": "Angular SASS classes suggestions",
  "description": "",
  "version": "0.9.1",
  "license": "MIT",
  "author": "jakubstepien",
  "repository": {
    "type": "git",
    "url": "https://github.com/jakubstepien/vscode-angular-sass-suggestions"
  },
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/angular.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "angularSassSuggestions.resetCache",
        "title": "Angular Sass Suggestions: Reset cache"
      }
    ],
    "configuration":[
      {
        "title": "Angular Sass classes suggestions",
        "properties": {
          "angularSassSuggestions.project": {
            "type": "string",
            "description": "Name of the project from angular.json get global styles from, if empty uses value of defaultProject from angular.json"           
          },
          "angularSassSuggestions.extraFileWatchers": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of file patterns whose change should trigger cache reset"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "watch": "tsc -watch -p ./",
    "test-compile": "tsc -p ./"
},
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/uuid": "^8.3.4",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "ts-loader": "^9.2.8",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "rxjs": "^7.5.5",
    "sass": "^1.50.0",
    "typescript": "^4.5.4",
    "uuid": "^8.3.2",
    "vscode-css-languageservice": "^5.1.12"
  }
}
